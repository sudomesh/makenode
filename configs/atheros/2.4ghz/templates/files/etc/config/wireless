config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option channel '3' 
	option phy 'phy0'

# the open wifi ap 
config wifi-iface
	option device 'radio0'
	option ifname 'open0'
	option encryption 'none'
	option network 'open'
	option mode 'ap'
	option ssid 'peoplesopen.net'

# the adhoc interface for the mesh
config wifi-iface
	option device 'radio0'
	option ifname 'adhoc0'
 	option encryption 'none'
	option mode 'adhoc'
	option bssid 'CA:FE:C0:DE:F0:0D'
	option ssid 'pplsopen.net-node2node'

# the private wpa2 interface
config wifi-iface
	option device 'radio0'
	option ifname 'priv0'
	option network 'priv'
	option encryption 'psk2'
	option key '<%= private_wifi_key %>'
	option mode 'ap'
	option ssid '<%= private_wifi_ssid %>'
